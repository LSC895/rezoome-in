{
  "manifest_version": 3,
  "name": "Rezoome - AI Resume Generator",
  "version": "1.0.0",
  "description": "Generate ATS-optimized resumes instantly from any job description",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://wmqtvnurwoispusqlsgw.supabase.co/*",
    "https://*.linkedin.com/*",
    "https://*.glassdoor.com/*",
    "https://*.indeed.com/*",
    "https://*.naukri.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.glassdoor.com/*",
        "https://*.indeed.com/*",
        "https://*.naukri.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rezoome - Generate Resume"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}